<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/pagebkg"
    tools:context=".AddPlayers">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bordelavander"
            android:padding="24dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresa nombres"
                android:textAlignment="center"
                android:textSize="36dp"
                android:textStyle="bold"
                android:textColor="@color/lavender"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/playerOne"
                    android:background="@drawable/bordelavander"
                    android:layout_marginTop="40dp"
                    android:padding="8dp"
                    android:maxLines="1"
                    android:textStyle="italic"
                    android:hint="ingresa jugador 1"
                    android:textColor="@color/lavender"
                    android:drawableLeft="@drawable/ic_xicon"
                    android:drawablePadding="8dp"
                    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/playerTwo"
        android:background="@drawable/bordelavander"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:maxLines="1"
        android:textStyle="italic"
        android:hint="ingresa jugador 2"
        android:textColor="@color/lavender"
        android:drawableLeft="@drawable/ic_oicon"
        android:drawablePadding="8dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:id="@+id/sartgame"
        android:text="iniciar juego"
        android:textSize="30sp"
        app:cornerRadius="20dp"
        />
    </LinearLayout>
    </androidx.cardview.widget.CardView>




</RelativeLayout>